<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:minHeight="80dp">

    <FrameLayout
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/img_ifhome_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/app_icon_alpha"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/tv_ifhome_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/title_text"
            android:textColor="@color/text_dark"/>

        <TextView
            android:id="@+id/tv_ifhome_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/tip_text"
            android:textColor="@color/text_second"/>
        <TextView
            android:id="@+id/tv_ifhome_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/tip_text"
            android:textColor="@color/text_second"/>

    </LinearLayout>

    <com.fish.fishdownloader.view.FDownloadBar
        android:id="@+id/dlbar_ifhome"
        android:layout_width="62dp"
        android:layout_height="26dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"/>

</LinearLayout>